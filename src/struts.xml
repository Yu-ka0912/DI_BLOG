<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
 "http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="com.diworksdev.di_blog.action" extends="struts-default">
		<action name="RegistrationAction" class="com.diworksdev.di_blog.action.RegistrationAction"
			method="execute">
			<result name="success">registration.jsp</result>
		</action>
		<action name="RegistrationConfirmAction" class="com.diworksdev.di_blog.action.RegistrationConfirmAction"
			method="execute">
			<result name="success">registrationConfirm.jsp</result>
			<result name="error">registration.jsp</result>
		</action>
		<action name="RegistrationCompleteAction"
			class="com.diworksdev.di_blog.action.RegistrationCompleteAction" method="execute">
			<result name="success">RegistrationComplete.jsp</result>
		</action>
		<action name="HomeAction" class="com.diworksdev.di_blog.action.HomeAction"
			method="execute">
			<result name="success">home.jsp</result>
		</action>
	</package>
</struts>
